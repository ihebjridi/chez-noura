{
  "name": "chez-noura-platform",
  "version": "0.0.0",
  "private": true,
  "description": "B2B corporate catering platform for Tunisia",
  "scripts": {
    "build": "pnpm --filter \"./packages/*\" build && pnpm --filter \"./apps/*\" build",
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter admin-web dev\" \"pnpm --filter business-web dev\" \"pnpm --filter employee-web dev\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:admin": "pnpm --filter admin-web dev",
    "dev:business": "pnpm --filter business-web dev",
    "dev:employee": "pnpm --filter employee-web dev",
    "start": "concurrently \"pnpm --filter backend start:prod\" \"pnpm --filter admin-web start\" \"pnpm --filter business-web start\" \"pnpm --filter employee-web start\"",
    "start:backend": "pnpm --filter backend start:prod",
    "start:admin": "pnpm --filter admin-web start",
    "start:business": "pnpm --filter business-web start",
    "start:employee": "pnpm --filter employee-web start",
    "lint": "pnpm --filter \"./packages/*\" lint && pnpm --filter \"./apps/*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --filter \"./packages/*\" type-check && pnpm --filter \"./apps/*\" type-check"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
